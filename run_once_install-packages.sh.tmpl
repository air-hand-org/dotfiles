#!/usr/bin/env bash

sudo apt update && sudo apt install -y \
    curl \
    bash-completion \
    make \
    vim \
    tree \
    socat \
    software-properties-common \
    apt-file \
    p7zip-full \
    unzip \
    lsof \
    inotify-tools \
    locales \
    ;

{{ if and (eq .chezmoi.os "linux") (eq .chezmoi.osRelease.id "ubuntu") }}
sudo add-apt-repository -y ppa:git-core/ppa && \
{{ end }}
sudo apt update && \
sudo apt install -y \
    git \
    tig \
    ;

if $(uname -a |grep WSL2 &> /dev/null) && test -z $REMOTE_CONTAINERS; then
    sudo add-apt-repository -y ppa:wslutilities/wslu && sudo apt update && sudo apt install -y --no-install-recommends wslu
fi

curl -o $HOME/.git-completion.sh -sL \
    https://raw.githubusercontent.com/git/git/master/contrib/completion/git-completion.bash
curl -o $HOME/.git-prompt.sh -sL \
    https://raw.githubusercontent.com/git/git/master/contrib/completion/git-prompt.sh

sudo apt update \
&& sudo apt install -y ca-certificates curl gnupg \
&& sudo mkdir -p /etc/apt/keyrings \
&& curl -fsSL https://deb.nodesource.com/gpgkey/nodesource-repo.gpg.key | sudo gpg --yes --dearmor -o /etc/apt/keyrings/nodesource.gpg  \
&& NODE_MAJOR=20 bash -c 'echo "deb [signed-by=/etc/apt/keyrings/nodesource.gpg] https://deb.nodesource.com/node_$NODE_MAJOR.x nodistro main" | sudo tee /etc/apt/sources.list.d/nodesource.list' \
&& sudo apt update && sudo apt install -y nodejs build-essential \
&& sudo npm install -g @devcontainers/cli

# install homebrew
NONINTERACTIVE=1 /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)" || true
